@using Microsoft.Extensions.Caching.Memory
@model dynamic

@{
    Layout = null;  // Assuming you don't want to use a shared layout.
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Simple Submit Button</title>
</head>
<body>
<form id="cxml_form" action="/SenderPage/ProductToSync" method="post" enctype="application/x-www-form-urlencoded">
    <div class="card-footer">
        <button type="submit" name="save" value="Submit">
            Submit
        </button>
    </div>
</form>
</body>
</html>
<script type="text/javascript">document.getElementById('cxml_form').submit()</script>